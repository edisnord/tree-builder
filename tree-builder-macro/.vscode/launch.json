    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'lox-lang'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=lox-lang",
                    "--package=lox-lang"
                ],
                "filter": {
                    "name": "lox-lang",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'lox-lang'",
